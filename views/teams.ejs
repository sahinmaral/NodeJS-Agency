<section class="page-section bg-light" id="team">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Our Amazing Team</h2>
            <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
        </div>
        <div class="row">
            <% for(let i=0; i < employees.length; i++) { %>

                <div class="col-lg-4">
                    <div class="team-member">
                        <img class="mx-auto rounded-circle" src="<%= employees[i].imageUrl %>" alt="..." />
                        <h4><%= employees[i].fullName %></h4>
                        <p class="text-muted"><%= employees[i].department.name %></p>
                        <a class="btn btn-dark btn-social mx-2" href="<%= employees[i].githubUrl %>" aria-label="<%= employees[i].fullName %> Github Profile"><i class="fab fa-github"></i></a>
                        <a class="btn btn-dark btn-social mx-2" href="<%= employees[i].linkedinUrl %>" aria-label="<%= employees[i].fullName %> LinkedIn Profile"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>

            <% } %>
        </div>
        <div class="row">
            <div class="col-lg-8 mx-auto text-center"><p class="large text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aut eaque, laboriosam veritatis, quos non quis ad perspiciatis, totam corporis ea, alias ut unde.</p></div>
        </div>
    </div>
</section>