<% if(adminInfo) { %>
<!DOCTYPE html>
<html lang="en">
  <%- include("../admin/partials/_header") %>
  <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
      <!-- Preloader -->
      <div
        class="preloader flex-column justify-content-center align-items-center"
      >
        <img
          class="animation__shake"
          src="/assets/img/AdminLTELogo.png"
          alt="AdminLTELogo"
          height="60"
          width="60"
        />
      </div>

      <!-- Navbar -->
      <%- include('../admin/partials/_navbar') %>
      <!-- /.navbar -->

      <!-- Main Sidebar Container -->
      <%- include('../admin/partials/_sidebar') %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <div class="content-header">
          <div class="container-fluid">
            <div class="row">
              <div class="col">
                <h1 class="m-0">Add new category</h1>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <!-- form start -->
                <form class="mt-3" action="/admin/categories/add" method="post">
                  <div class="form-group">
                    <label for="header">Name</label>
                    <input
                      type="text"
                      class="form-control"
                      id="name" name="name"
                      placeholder="Enter name"
                    />
                  </div>
                  <button type="submit" class="btn btn-primary mt-3 w-100">
                    Submit
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- /.content-wrapper -->

      <!-- Footer -->
      <%- include('../admin/partials/_footer') %>
      <!-- ./Footer -->
    </div>
    <!-- ./wrapper -->

    <script>
      let isEndDateCheckBox = document.getElementById("isEndDate")

      document.querySelector("form").addEventListener("submit",(event)=> {
        if(isEndDateCheckBox.checked){
          document.getElementById('isEndDateValue').value = 1
        }else{
          document.getElementById('isEndDateValue').value = 0
        }
      })
    </script>
    <%- include('../admin/partials/_scripts') %>
  </body>
</html>
<% } else { %> <%- include("../admin/partials/_header") %> <%-
include('../admin/401') %> <% } %>
